{
  "name": "shaclc-write",
  "version": "1.4.3",
  "description": "A writer for SHACLC documents",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint lib/* __tests__/*.ts --ext .ts",
    "lint:fix": "eslint lib/* __tests__/*.ts --ext .ts --fix",
    "build": "tsc",
    "prepare": "tsc",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeswr/shaclc-writer.git"
  },
  "keywords": [
    "SHACLC",
    "SHACL-compact-syntax",
    "writer",
    "rdf"
  ],
  "author": "Jesse Wright <jesse.wright@anu.edu.au>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jeswr/shaclc-writer/issues"
  },
  "homepage": "https://github.com/jeswr/shaclc-writer#readme",
  "devDependencies": {
    "@rdfjs/types": "^1.1.0",
    "@types/jest": "^29.2.5",
    "@types/n3": "^1.10.4",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.3.1",
    "jest-rdf": "^1.7.1",
    "pre-commit": "^1.2.2",
    "semantic-release": "^19.0.5",
    "shaclc-parse": "^1.3.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@jeswr/prefixcc": "^1.2.1",
    "n3": "^1.16.3",
    "rdf-string-ttl": "^1.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "verbose": false,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 100,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "pre-commit": [
    "lint",
    "build",
    "test"
  ],
  "release": {
    "branches": [
      "main"
    ]
  }
}
