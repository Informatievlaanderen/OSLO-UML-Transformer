{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/stakeholders.schema.json",
  "title": "Stakeholders JSONSchema JSON",
  "description": "JSONSchema voor het valideren van OSLO stakeholders bestanden in JSON formaat",
  "type": "object",
  "required": [
    "contributors",
    "editors",
    "authors"
  ],
  "properties": {
    "contributors": {
      "description": "Lijst van contributors",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "firstName",
          "lastName"
        ],
        "properties": {
          "firstName": {
            "description": "Voornaam contributor",
            "type": "string"
          },
          "lastName": {
            "description": "Achternaam contributor",
            "type": "string"
          },
          "affiliation": {
            "description": "Organisatie contributor",
            "type": "object",
            "properties": {
              "affiliationName": {
                "description": "Naam organisatie",
                "type": "string"
              },
              "homepage": {
                "description": "IRI van de organisatie",
                "type": "string",
		"format": "uri"
              }
            }
          },
          "email": {
            "description": "E-mail contributor",
            "type": "string",
            "format": "email"
          }
        }
      }
    },
    "editors": {
      "description": "Lijst van editors",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "firstName",
          "lastName"
        ],
        "properties": {
          "firstName": {
            "description": "Voornaam editor",
            "type": "string"
          },
          "lastName": {
            "description": "Achternaam editor",
            "type": "string"
          },
          "affiliation": {
            "description": "Organisatie editor",
            "type": "object",
            "properties": {
              "affiliationName": {
                "description": "Naam organisatie",
                "type": "string"
              },
              "homepage": {
                "description": "IRI van de organisatie",
                "type": "string",
		"format": "uri"
              }
            }
          },
          "email": {
            "description": "E-mail editor",
            "type": "string",
            "format": "email"
          }
        }
      }
    },
    "authors": {
      "description": "Lijst van auteurs",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "firstName",
          "lastName"
        ],
        "properties": {
          "firstName": {
            "description": "Voornaam auteur",
            "type": "string"
          },
          "lastName": {
            "description": "Achternaam auteur",
            "type": "string"
          },
          "affiliation": {
            "description": "Organisatie auteur",
            "type": "object",
            "properties": {
              "affiliationName": {
                "description": "Naam organisatie",
                "type": "string"
              },
              "homepage": {
                "description": "IRI van de organisatie",
                "type": "string",
                "format": "uri"
              }
            }
          },
          "email": {
            "description": "E-mail auteur",
            "type": "string",
            "format": "email"
          }
        }
      }
    }
  }
}
