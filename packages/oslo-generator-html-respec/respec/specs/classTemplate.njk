<h3>
  {{class.label}}
</h3>

<table class='simple'>
  <tr>
    <td>Type</td>
    <td>Class</td>
  </tr>
  <tr>
    <td>URI</td>
    <td>{{class.id}}</td>
  </tr>
  {% if class.parent %}
    <tr>
      <td>Parent</td>
      <td>{{class.parent}}</td>
    </tr>
  {% endif %}
  <tr>
    <td>Definition</td>
    <td>{{class.definition}}</td>
  </tr>
  {% if class.usageNote %}
    <tr>
      <td>Usage</td>
      <td>{{class.usageNote}}</td>
    </tr>
  {% endif %}
</table>