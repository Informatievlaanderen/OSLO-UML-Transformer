{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES2019", "DOM"],
    "target": "ES2019",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "importHelpers": false,
    "strict": true,
    "esModuleInterop": true,
    "types": ["reflect-metadata", "node", "jest"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "packages/**/index.ts",
    "packages/**/bin/**/*",
    "packages/**/lib/**/*",
  ],
  "exclude": ["**/node_modules", "**/test/*"],
}
