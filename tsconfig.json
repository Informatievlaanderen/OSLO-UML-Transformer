{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2019",
      "dom"
    ],
    "target": "es2017",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "importHelpers": false,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "packages/*/index.ts",
    "packages/*/bin/**/*",
    "packages/*/lib/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/test/*"
  ]
}